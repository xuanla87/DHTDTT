@using ServiceNews.Models
@model List<Menu>
@if (Model != null && Model.Count > 0)
{
    <div class="box">
        <div class="title pading-left-20  pading-top-10  pading-bottom-10 text-uppercase">
            Chuyên mục tin tức
        </div>
        <ul class="right-nav nav">
            @foreach (var item in Model)
            {
                if (item.menuLink == "/" || string.IsNullOrEmpty(item.menuLink))
                {
                    <li class="active">
                        <a href="@item.menuLink">@item.menuName</a>
                        @Html.Action("getSubMenu", "Home", new { Id = item.menuId })
                    </li>
                }
                else
                {
                    <li>
                        <a href="@item.menuLink">@item.menuName</a>
                        @Html.Action("getSubMenu", "Home", new { Id = item.menuId })
                    </li>
                }

            }
        </ul>
    </div>

}

