@{
    int count = 0;
}
@model IEnumerable<ServiceNews.Models.Content>
@if (Model != null && Model.Count() > 0)
{
    <h2><a href="@ViewBag.Url">Media</a></h2>
    <div class="box-body">
        <div class="media">
            @foreach (var item in Model)
            {
                count++;
                if (count == 1)
                {
                    <div class="item active">
                        @Html.Raw(item.contentDescription)
                        <div class="title">
                            <a href="@item.contentAlias" title="@item.contentName">
                                @if (item.contentName.Length > 70)
                                {
                                    @Html.Raw(item.contentName.Substring(0, 70) + "...")
                                }
                                else
                                {
                                    @Html.Raw(item.contentName)
                                }
                            </a>
                        </div>
						<div class="des">
							@Html.Raw(item.contentBody)
						</div>
                    </div>
                }
            }
        </div>
    </div>
}




