@{
    ViewBag.Title = "Cài đặt hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model ProjectNews.Areas.Admin.Models.ModelCaiDatHeThong
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i>Admin</a></li>
        <li><a href="/Admin/CaiDatHeThong">Cài đặt hệ thống</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                @using (Html.BeginForm())
                {
                <div class="box-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label("Banner trang", new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.SiteBanner, new { @class = "form-control", @placeholder = "Chọn banner.." })
                                @Html.ValidationMessageFor(x => x.SiteBanner, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Tiêu đề trang", new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.SiteTitle, new { @class = "form-control", @placeholder = "Nhập tiêu đề.." })
                                @Html.ValidationMessageFor(x => x.SiteTitle, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Mô tả trang", new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.SiteDescription, new { @class = "form-control", @placeholder = "Nhập mô tả.." })
                                @Html.ValidationMessageFor(x => x.SiteDescription, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Box tin tức chung", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.BoxTinTucChung, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.BoxTinTucChung, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Box tin tức ngành", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.BoxTinTucNganh, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.BoxTinTucNganh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Box sách và học liệu", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.BoxSachVaHocLieu, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.BoxSachVaHocLieu, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Danh mục phải", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.DanhMucPhai, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.DanhMucPhai, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Trang tiếng anh", new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.LinkEnglish, new { @class = "form-control", @placeholder = "Nhập link.." })
                                @Html.ValidationMessageFor(x => x.LinkEnglish, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Sơ đồ website", new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.LinkEnglish, new { @class = "form-control", @placeholder = "Nhập link.." })
                                @Html.ValidationMessageFor(x => x.LinkSiteMap, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label("Danh mục chính", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.DanhMucChinh, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.DanhMucChinh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Box Slider chính", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.BoxSlider, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.BoxSlider, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Box 1", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.BoxBanner, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.BoxBanner, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Box phải", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.BoxBannerRight, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.BoxBannerRight, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Box liên kết", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.BoxLienKet, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.BoxLienKet, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Box phóng sự ảnh", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.BoxPhongSuAnh, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.BoxPhongSuAnh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Box media", new { @class = "control-lable" })
                                @Html.DropDownListFor(x => x.BoxMedia, null, "---Chọn---", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.BoxMedia, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Link FanPage", new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.LinkFanPage, new { @class = "form-control", @placeholder = "Nhập link.." })
                                @Html.ValidationMessageFor(x => x.LinkFanPage, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Link Messenger", new { @class = "control-lable" })
                                @Html.TextBoxFor(x => x.LinkMessenger, new { @class = "form-control", @placeholder = "Nhập link.." })
                                @Html.ValidationMessageFor(x => x.LinkMessenger, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Nội dung chân trang", new { @class = "control-lable" })
                        @Html.TextAreaFor(x => x.SiteFooterInfo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.SiteFooterInfo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Mã nhúng bản đồ", new { @class = "control-lable" })
                        @Html.TextAreaFor(x => x.BanDo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.BanDo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Nội dung", new { @class = "control-lable" })
                        @Html.TextAreaFor(x => x.SiteAbout, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.SiteAbout, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu dữ liệu</button>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</section>
@section scriptAs {
    <script>
        $(function () {
            CKEDITOR.replace('SiteFooterInfo', {
                toolbar: [
                    ['JustifyLeft', 'JustifyCenter', 'JustifyRight', 'JustifyBlock'],
                    ['Bold', 'Italic', 'Underline'],
                    ['Image', 'Youtube', 'Link', 'Unlink'], ['Styles', 'Format', 'Font', 'FontSize'], ['TextColor', 'BGColor'], ['Maximize', 'Source']
                ], height: '150px'

            });
            CKEDITOR.replace('SiteAbout', {
                toolbar: [
                    ['JustifyLeft', 'JustifyCenter', 'JustifyRight', 'JustifyBlock'],
                    ['Bold', 'Italic', 'Underline']
                ], height: '100px'

            });
        });

    </script>
}