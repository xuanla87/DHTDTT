@{
    int count = 0;
}
@model IEnumerable<ServiceNews.Models.Content>
@if (Model != null && Model.Count() > 0)
{
    <div id="slider-main" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                count++;
                if (count == 1)
                {
                    <div class="item active">
                        <a href="@item.contentDescription">
                            <img src="@item.contentThumbnail" alt="@item.contentName">
                        </a>
                        <div class="caption">
                            <a href="@item.contentDescription">
                                @Html.Raw(item.contentBody)
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="item">
                        <a href="@item.contentDescription">
                            <img src="@item.contentThumbnail" alt="@item.contentName">
                        </a>
                        <div class="caption">
                            <a href="@item.contentDescription">
                                @Html.Raw(item.contentBody)
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
        <a class="left carousel-control" href="#slider-main" data-slide="prev">
            <span class="fa fa-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#slider-main" data-slide="next">
            <span class="fa fa-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}


